
<table class="table table-striped table table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>FirstName</th>
      <th>LastName</th>
      <th>Email</th>
      <th>PhoneNo</th>
    </tr>
  </thead>

  <tbody>
    <% @recuriements.each do|recuriement| %>
    <tr>
      <td><%= recuriement.first_name %></td>
      <td><%= recuriement.last_name %></td>
      <td><%=recuriement.email %></td>
      <td><%=recuriement.phone %></td>

      <td><%= link_to 'show', recuriement, class:"btn btn-primary" %></td>

      <% if current_user %>

        <td><%= link_to 'Edit', edit_recuriement_path(recuriement), class:"btn btn-info" %></td>
        <td><%= button_to 'Destroy', recuriement, method: :delete, class:"btn btn-dark" %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New recuriement", new_recuriement_path, class:"btn btn-info" %>
